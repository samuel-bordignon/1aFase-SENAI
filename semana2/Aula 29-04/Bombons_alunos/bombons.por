programa {
  funcao inicio() {

inteiro numeroAluno 
inteiro numeroBombons
inteiro numeroProfessores
inteiro numeroBombonsCompra

escreva("digite a quantidade de alunos na turma: ")
leia(numeroAluno)
escreva("digite a quantidade de professore na turma: ")
